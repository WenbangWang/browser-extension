{
  "manifest_version": 2,
  "name": "ng-Todo",
  "description": "Minimal todo app for minimalist",
  "short_name": "ng-Todo",
  "version": "0.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "*://*/*"
      ]
    }
  ],
  "web_accessible_resources": [
    "index.html",
    "package.json"
  ],
  "content_security_policy": "default-src 'none'; connect-src https://*.ebay.com/ http://*.ebay.com/"
}
