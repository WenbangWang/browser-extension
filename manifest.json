{
  "manifest_version": 2,
  "name": "Vue-Todo",
  "description": "Minimal todo app for Vue",
  "short_name": "Vue-Todo",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "background-script.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "*://*.ebay.com/*"
      ]
    }
  ],
  "browser_action": {},
  "web_accessible_resources": [
    "index.html"
  ],
  "content_security_policy": "default-src 'self'; connect-src https://*.ebay.com/ http://*.ebay.com/; img-src http://*.ebaystatic.com/ http://*.ebayimg.com/"
}
