{
  "manifest_version": 2,
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "short_name": "__MSG_shortName__",
  "default_locale": "en",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "background-script.js"
    ]
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "*://*.ebay.com/*"
      ]
    }
  ],
  "browser_action": {},
  "web_accessible_resources": [
    "index.html"
  ],
  "content_security_policy": "default-src 'self'; connect-src https://*.ebay.com/ http://*.ebay.com/; img-src http://*.ebaystatic.com/ http://*.ebayimg.com/"
}
